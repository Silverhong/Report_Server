<html></html>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style type="text/css">
           {#asset invoice-styles.css @encoding=utf8}
           @font-face {
            font-family: 'Khmer OS Muol Light';
            src: url({#asset KhmerOS_muollight.ttf @encoding=dataURI});
            format('ttf');
        }
          @font-face {
            font-family: "Khmer OS Content";
            src: url({#asset KhmerOScontent.ttf @encoding=dataURI}) format("truetype");
        }
          * {
              box-sizing: border-box;
          }

          html, body {
              margin: 0px;
              padding: 0px;
          }

          /* .main {
              display: flex;
              flex-direction: column;
              justify-content: space-between;
              width: 100%;
              height: 100%;
          } */
          .main {
              display: flex;
              flex-direction: column;
              justify-content: space-between;
              width: 100%;
              height: 100%;
          }

          .header {
              width: 100%;
              margin-left:20px;
              padding-top: 10px;
              
          }

          .footer {
              width: 100%;
              font-size:12px;
              margin-left:20px;
              padding-bottom: 15px;
              /* border-top: 1px solid black; */
              font-family:Khmer OS Content;
          }
          .invoice-box {
            /* max-width: 559.37px; */
            /* margin: auto; */
            /* border: 1px solid #eee; */
            /* box-shadow: 0 0 10px rgba(0, 0, 0, .15); */
            /* font-size: 16px;
            line-height: 24px; */
            font-family: 'Helvetica Neue', 'Helvetica', Helvetica, Arial, sans-serif;
            color: #555;
        }

        .invoice-box table {
            width: 100%;
            margin-right: 0px;
            border-spacing: 0px;
            line-height: inherit;
            text-align: left;
        }

        .invoice-box table td {
            vertical-align: top;
            font-family: Khmer OS Content;
            font-size: 12px;
            margin: 0px;
        }

        .invoice-header {
            line-height: 13px;
            /* padding:0px; */
            align: right;
            margin: 0px;
            text-align: right;
        }

        .invoice-total {
            text-align: right;
            text-align: center;
        }

        .invoice-total table tr td.total {
            text-align: right;
            vertical-align: center;
            font-size: 14px;
            text-decoration: underline;
            line-height: 16px;
        }

        .invoice-total table tr td.title {
            text-align: right;
            vertical-align: bottom;
            font-size: 12px;
            line-height: 16px;
        }

        .invoice-box table tr table td.customer td {
            line-height: 15px;
            /* padding:0px; */
            align: right;
            margin: 0px;
        }

        /* .invoice-box table tr td:nth-child(2) {
            text-align: right;
        } */

        /* .invoice-box table tr.top table td {
            padding-bottom: 20px;
        }

        .invoice-box table tr.top table td.title {
            font-family: 'Khmer OS Content';
            font-size: 45px;
            line-height: 45px;
            color: #333;
        } */

        /* .invoice-box table tr.information table td {
            padding-bottom: 40px;
        } */

        .invoice-box table tr.heading td {
            background: #eee;
            border-bottom: 1px solid #ddd;
            font-weight: bold;
        }

        .invoice-box table tr.details td {
            /* padding-bottom: 20px; */
        }

        .invoice-box table tr.item td {
            line-height:20px;
            border-bottom: 1px solid #eee;
        }

        .invoice-box table tr.item.last td {
            border-bottom: none;
        }

        .invoice-box table tr.total td:nth-child(2) {
            border-top: 2px solid #eee;
            font-weight: bold;
        }
        </style>
    </head>
    <body>
        {{#each $pdf.pages}}
          {{#if @index}}
            <div style="page-break-before: always;"></div>
          {{/if}}
          <main class="main">
            <header class="header">
                <div class="invoice-box">
                    <table cellpadding="0" cellspacing="0">
                        <tr>
                            <td>
                                <table>
                                    <tr>
                                        <table>
                                            <tr>
                                                <td style="white-space:nowrap;width:70">
                                                    <img src="{#asset logo_bc.png @encoding=dataURI}" width="70" />
                                                </td>
                                                <td style="text-align:left">
                                                    <table>
                                                        <tr>
                                                            <td style="font-family:Khmer OS Muol Light;font-size:15px;">ផ្សារ អាយ៉ាឡា</td>
                                                        </tr>
                                                        <tr>
                                                            <td style="font-size:13px;line-height:13px">Ayala Malls</td>
                                                        </tr>
                                                        <tr>
                                                            <td style="font-size:13px;line-height:13px">Tel: 010 548 999</td>
                                                        </tr>
                                                    </table>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td colspan="2">
                                                    <table>
                                                        <tr>
                                                            <td class="customer">
                                                                <table>
                                                                    <tr>
                                                                        <td style="font-family:Khmer OS Muol Light" colspan="2">អតិថិជន</td>
                                                                    </tr>
                                                                     <tr>
                                                                        <td style="width:35%">
                                                                            កូដ៖
                                                                        </td>
                                                                        <td>
                                                                            {{group.customer.addcode}}
                                                                        </td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td style="width:35%">
                                                                            ឈ្មោ៖
                                                                        </td>
                                                                        <td>
                                                                            {{group.customer.name}}
                                                                        </td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td>
                                                                            តូប៖
                                                                        </td>
                                                                        <td style="width:100px">
                                                                            {{group.customer.store}} 
                                                                        </td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td>
                                                                            ផ្សារ៖
                                                                        </td>
                                                                        <td style="width:100px">
                                                                            {{group.customer.market}} 
                                                                        </td>
                                                                    </tr>
                                                                    <tr>
                                                                        <td>
                                                                            លេខទូរស័ព្ទ៖
                                                                        </td>
                                                                        <td>
                                                                            {{group.customer.phone}}
                                                                        </td>
                                                                    </tr>
                                                                </table>
                                                            </td>

                                                        </tr>
                                                    </table>
                                                </td>
                                            </tr>

                                        </table>
                                        <td class="invoice-header" align="right">
                                            <table>
                                                <tr>
                                                    <td colspan="2" style="font-family:Khmer OS Muol Light;text-align:center">វិក័យប័ត្រ</td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        លេខវិក័យប័ត្រ៖
                                                    </td>
                                                    <td style="text-align:left">
                                                        {{group.header.invoice-number}}
                                                    </td> 
                                                <tr>
                                                    <td>
                                                        ថ្ងៃចេញវិក័យប័ត្រ៖
                                                    </td>
                                                    <td style="text-align:left">
                                                        {{group.header.invoice-date}}
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        អ្នកលក់៖
                                                    </td>
                                                    <td style="text-align:left">
                                                        {{group.header.seller}}
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        អ្នកចេញវិក័យប័ត្រ៖
                                                    </td>
                                                    <td style="text-align:left">
                                                        {{group.header.invoice-printed}}
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                    </td>
                                                    <td style="text-align:left">
                                                        <img src={{group.header.qrcode}} width="80px">
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </table>
                </div>
            </header>
            <footer class="footer">
                <span>ទំព៏រទី {{getPageNumber @index}} នៃ {{getTotalPages ../$pdf.pages}}</span>
            </footer>
          </main>
        {{/each}}
    </body>
</html>